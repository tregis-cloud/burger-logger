<div class="container">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <img src="#" alt="burger" width="200" height="200">
            <h1>Eat-Da-Burgers!</h1>
        </div>
        <div class="col-sm-4"></div>
    </div>
    <br>
    <br>

    <div class="row">
        <div class="col-sm-4, col-md-4, col-lg-4">
            <h2>Not Devoured!</h2>
            <ul>
                {{#each burger}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-sm-4, col-md-4, col-lg-4"></div>

        <div class=" col-sm-4, col-md-4, col-lg-4">
            <h2>Burgers Devoured!</h2>

            <ul>
                {{#each burger}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4, col-md-4, col-lg-4"></div>
        <div class="col-sm-4, col-md-4, col-lg-4">
            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="bu"></label>
                    <input type="text" id="bu" name="name">
                </div>

                <div class="form-group">
                    <label for="devoured"></label><br>
                    {{!-- <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                    <input type="radio" name="devoured" value="0"> Not Devoured --}}

                    <button type="submit">Submit</button>
            </form>
        </div>
        <div class="col-sm-4, col-md-4, col-lg-4"></div>
    </div>

</div>